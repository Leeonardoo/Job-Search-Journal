<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/editView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <EditText
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/company_name"
            android:inputType="text|textCapWords" />

        <EditText
            android:id="@+id/company_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/company_position"
            android:inputType="text|textCapWords" />


        <EditText
            android:id="@+id/company_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/company_size"
            android:inputType="text"
            android:lines="2" />

        <EditText
            android:id="@+id/company_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/company_location"
            android:inputType="text"
            android:lines="2" />

        <EditText
            android:id="@+id/company_goal_mission_statement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/company_goal_mission_statement"
            android:inputType="text"
            android:lines="2" />

        <EditText
            android:id="@+id/company_miscellaneous_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="top"
            android:hint="@string/misc_notes_about_company"
            android:inputType="text|textMultiLine"
            android:lines="5" />

        <TextView
            android:id="@+id/add_company_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lines="5"
            android:text="@string/add_company_message"
            android:textSize="12dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/save" />

    </LinearLayout>
</ScrollView>