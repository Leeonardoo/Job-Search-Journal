<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/update_steps_in_application_process"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <TextView
            android:id="@+id/company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Company Name" />

        <LinearLayout
            android:id="@+id/initial_contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip">

            <TextView
                android:id="@+id/initial_contact_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Initial Contact" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_of_interaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Date Of Interaction*" />

                <ImageView
                    android:id="@+id/date_of_interaction_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/calendar_icon"
                    android:onClick="showDatePickerDialog"
                    android:layout_toRightOf="@id/date_of_interaction"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Contact Name"
                android:inputType="text|textCapWords" />

            <EditText
                android:id="@+id/contact_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Contact Email Address"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/company_goal_mission_statement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Company Goal or Mission Statement"
                android:inputType="text"
                android:lines="2" />

            <EditText
                android:id="@+id/company_miscellaneous_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:hint="Miscellaneous notes about this company."
                android:inputType="text|textMultiLine"
                android:lines="5" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>