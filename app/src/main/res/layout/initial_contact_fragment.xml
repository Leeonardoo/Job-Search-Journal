<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/initial_contact_fragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dip"
    android:paddingRight="10dip">

    <TextView
        android:id="@+id/initial_contact_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/initial_contact" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/date_of_interaction_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calendar_icon"
            android:onClick="showDatePickerDialog"
            android:contentDescription="Calendar for datepicker" />

        <EditText
            android:id="@+id/date_of_interview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/date_of_interaction_picker"
            android:layout_weight="2"
            android:hint="@string/date_of_interaction"
            android:inputType="date" />

    </RelativeLayout>

    <EditText
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/contact_name"
        android:inputType="text|textCapWords" />

    <EditText
        android:id="@+id/contact_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/contact_email_address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/method_of_interaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="top"
        android:hint="@string/method_of_interaction"
        android:inputType="text|textMultiLine"
        android:lines="2" />

    <EditText
        android:id="@+id/what_was_discussed_with_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:hint="@string/what_did_you_discuss"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:lines="5" />

</LinearLayout>