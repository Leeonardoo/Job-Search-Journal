<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <shape>
            <!-- Shadow -->
            <stroke
                android:width="3dp"
                android:color="@color/shadow_color" />
            <!-- Shadow properties  -->
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="2dp"
                android:top="0dp" />
        </shape>

    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>