<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#757572" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />

            <padding
                android:bottom="5dip"
                android:left="5dip"
                android:right="5dip"
                android:top="5dp" >
            </padding>
        </shape>
    </item>

</layer-list>